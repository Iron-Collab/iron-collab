<h1>Profile</h1><br><br>
{{#with user}}
  
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{ profilePicture }}" class="card-img" alt="profile picture">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h6
         class="card-text" type="text" name="username" >Username: {{ username }}</h6
        >
        <h6
         class="card-text" type="text" name="course" >Course: {{ course }}</h6
        >
        <h6
         class="card-text" type="text" name="location" >Location: {{ location }} </h6
        >
        <p class="card-text"><small class="text-muted">Last updated {{ updatedAt }}</small></p>
      </div>
    </div>
  </div>
</div>

{{/with}}

<a href="/profileEdit">Edit profile</a>
