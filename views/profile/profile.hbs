{{!-- MY PROJECTS --}}
{{#if project}}
<h4 style="text-align: center;">My Projects</h4>
{{#each project}}
          <div id="accordionExample" class="accordion shadow">
            <div class="card">
                <div id="heading{{ id }}" class="card-header bg-white shadow-sm border-0">
                    <h2 class="mb-0">
                        <button type="button" data-toggle="collapse" data-target="#collapse{{ id }}" aria-expanded="true" aria-controls="collapseOne" class="btn btn-link text-dark font-weight-bold text-uppercase collapsible-link">{{ title }}</button>
                    </h2>
                </div>
                <div id="collapse{{ id }}" aria-labelledby="heading{{ id }}" data-parent="#accordionExample" class="collapse show">
                    <div class="card-body p-4">
                        <p class="font-weight-light m-0">{{ description }}<a href="/projects/{{ id }}"> details</a></p>
                    </div>
                </div>
            </div>    
          </div>
{{/each}}
{{/if}}
