{{!-- <h1 class="page-title">Profile</h1><br> --}}

{{!-- PROFILE INFO --}}

<div class="profile-container">
  <div class="container-left">
    {{#with user}}
  
      <div class="profile-header">
        <img class="profilePicture" src="{{ profilePicture.imgPath }}" alt="Admin">
        <h4>{{ name }} {{ lastName }}</h4>
      </div>
    
      <div class="profile-list">
        <div class="profile-item">
          <img class="icon" src="/images/MAIL.png" alt="email icon">
          <span>{{ email }}</span>
        </div>
  
        <div class="profile-item">
          <img class="icon" src="/images/COURSE.png" alt="course icon">
          <span>{{ course }}</span>
        </div>
  
        <div class="profile-item">
          <img class="icon" src="/images/LOCATION.png" alt="location icon">
          <span>{{ location }}</span>
        </div>
  
        {{#if website }}
        <div class="profile-item">
          <img class="icon" src="/images/WEBSITE.png" alt="website icon">
          <span>{{ website }}</span>
        </div>     
        {{/if}}
  
        {{#if github }}
          <div class="profile-item">
            <img class="icon" src="/images/GITHUB.png" alt="github icon">
            <span>{{ github }}</span>
          </div>   
        {{/if}}
      </div>

      <br>

      {{#unless loggedUser}}
        <a href="/profile/{{ id }}/edit"><button class="btn-small-accept">Edit profile</button></a>
      {{/unless}}
          
    {{/with}}
  </div>
  
  
  <div class="container-right">
  
  {{!-- PROJECTS --}}

  {{!-- my projects / the ones I added --}}
  {{#if project}}
    <h4>MY PROJECTS</h4>
    {{#each project}}
      <div class="accordion">
        <div class="accordion-item">
          <button id="accordion-button-1" aria-expanded="false">
            <span class="accordion-title">{{ title }}</span>
            <span class="icon" aria-hidden="true"></span>
          </button>
          <div class="accordion-content">
            <p>{{ description }}<a href="/projects/{{ id }}"><br>More details</a></p>
          </div>
        </div>    
      </div>
    {{/each}}
  {{/if}}
  
  {{!-- approved applications --}}
  <br>
  {{#if team}}
    <h4>COLLAB PROJECTS</h4>
    {{#each team}}
      <div class="accordion">
        <div class="accordion-item">
          <button id="accordion-button-1" aria-expanded="false">
            <span class="accordion-title">{{ title }}</span>
            <span class="icon" aria-hidden="true"></span>
          </button>
          <div class="accordion-content">
            <p>{{ description }}<a href="/projects/{{ id }}"><br>More details</a></p>
          </div>
        </div>    
      </div>
    {{/each}}
  {{/if}}
  
  {{!-- projects applied to - pending response --}}
  {{#if loggedUser}}
  <br>
  {{#if applied}}
    <h4>PENDING APPLICATIONS</h4>
    {{#each applied}}
      <div class="accordion">
        <div class="accordion-item">
          <button id="accordion-button-1" aria-expanded="false">
            <span class="accordion-title">{{ title }}</span>
            <span class="icon" aria-hidden="true"></span>
          </button>
          <div class="accordion-content">
            <p>{{ description }}<a href="/projects/{{ id }}"><br>More details</a></p>
          </div>
        </div>    
      </div>
    {{/each}}
  {{/if}}
  {{/if}}
  </div>
</div>

<script src="/javascripts/profile.js"></script>