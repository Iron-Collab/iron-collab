<h1 class="page-title">Edit profile</h1>

{{#with user}}

  <form class="edit-profile-container" action="/profile/{{ _id }}/edit" method="POST" enctype="multipart/form-data">
  
    <div class="form-row">
      <label for="email"><strong>Email: </strong> </label>
      <input id="email" type="email" name="email" value={{ email }} required>
    </div>
  
    <div class="form-row">
        <label for="name"><strong>Name: </strong> </label>
        <input id="name" type="text" name="name" value={{ name }}>
    </div>

    <div class="form-row">
        <label for="lastName"><strong>Last Name: </strong> </label>
        <input id="lastName" type="text" name="lastName" value={{ lastName }}>
    </div>
  
  {{/with}}
  
    <div class="form-row">
      <label for="course"><strong>Course: </strong> </label>
      <select name="course" id="course">
        {{{ optionsCourse }}}
      </select>
    </div>

    <div class="form-row">
      <label for="location"><strong>Location: </strong> </label>
      <select name="location" id="location">
        {{{ optionsLocation }}}
      </select>
    </div>
    
  {{#with user}}
  
    <div class="form-row">
      <label for="website"><strong>Website: </strong> </label>
      <input id="website" type="text" name="website" value={{ website }}>
    </div>
    
    <div class="form-row">  
      <label for="github"><strong>GitHub: </strong> </label>
      <input id="github" type="text" name="github" value={{ github }}>
    </div>
  
    <div class="form-row">
      <label for="profilePicture"><strong>Profile Picture: </strong> </label>
      <input id="profilePicture" type="file" name="photo" value="{{ profilePicture.imgPath }}" >
    </div><br>
  
    <div>
        <button class="btn-dark" type="submit">Save</button>
    </div>
  
  </form>

  {{/with}}
