{{#with project }}
<!-- Wrapper -->
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar">
      {{!-- <div class="sidebar-header"><h3>Sidebar</h3></div> --}}
      
      <ul class="list-unstyled components mt-5 m-3">
        {{!-- Apply --}}
        <li class="mt-3">
          <a href="/projects"> <button type="button" class="btn btn-outline-dark">Back to All Projects</button></a>
        </li>
        {{!-- Apply --}}
{{#unless isOwner}}
{{#unless isApplicant}}
        <li class="mt-3">
          <a href="/projects/{{ id }}/apply"> <button type="button" class="btn btn-outline-dark">Apply</button></a>
        </li>
{{else}}
        <li class="mt-3">
          <a href="/projects/{{ id }}/withdraw"> <button type="button" class="btn btn-outline-dark">Withdraw Application</button></a>
        </li>
{{/unless}}
{{/unless}}
        {{!-- Add --}}
        {{!-- <li class="mt-3">
          <a href="/projects/new"> <button type="button" class="btn btn-outline-dark">Add Project</button></a>
        </li> --}}
        {{!-- Edit --}}
{{#if isOwner}}
        <li class="mt-3">
          <a href="/projects/{{ id }}/edit"> <button type="button" class="btn btn-outline-dark">Edit Project</button></a>
        </li>
        {{!-- Delete --}}
        <li class="mt-3">
          <a href="/projects/{{ id }}/delete"> <button type="button" class="btn btn-outline-dark">Delete Project</button></a>
        </li>
{{/if}}
        {{!-- Manage applicants --}}
        {{!-- <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Manage Applicants</a>
        <ul class="collapse list-unstyled" id="pageSubmenu">
            {{#each applicants}}
            <li>
                <a href="/profile/{{ id }}">{{ name }} {{ lastName }}</a>
            </li>
            {{/each}}
        </ul> --}}
      </ul>
    </nav>
    <!-- End sidebar -->
 
    <!-- Content -->
    {{!-- <div class="content"> --}}
      {{!-- <div class="container shadow-lg p-4 mt-5 mb-5 bg-white rounded"> --}}

      <div class=".container p-4 m-5">

      {{#if alert}}
        <div class="alert alert-secondary" role="alert">{{ alert }}</div>
      {{/if}}

        <h1>Project Details</h1><br>
        
          <h5 class="mt-3"><strong>Title: </strong>  {{ title }} </h5>
          <h5 class="mt-3"><strong>Description: </strong> {{ description }} </h5>
          <h5 class="mt-3"><strong>Location: </strong> {{ location }} </h5>
          <h5 class="mt-3"><strong>Looking for: </strong></h5>
            <ul>
              {{#if lookingFor.webdev}}
              <li><h6>Web Developers: {{lookingFor.webdev}} </h6></li>
              {{/if}}
              {{#if lookingFor.uxui}}
              <li><h6>UX/UI Designers: {{lookingFor.uxui}} </h6></li>
              {{/if}}
              {{#if lookingFor.data}}
              <li><h6>Data Analysts: {{lookingFor.data}} </h6></li>
              {{/if}}
            </ul>
          <h5 class="mt-3"><strong>Owner:</strong> <a href="/profile/{{ owner.0.id }}">{{ owner.0.name }} {{ owner.0.lastName }} - {{ owner.0.course }}</a></h5>
          <h5 class="mt-3"><strong>Deadline:</strong> {{ deadline }} </h5>
          <h5 class="mt-3"><strong>Status:</strong> {{ status }} </h5>
{{#if isOwner}}

          {{#if team}}
          <h5 class="mt-3 mb-3"><strong>Team:</strong></h5>
          <form action="/projects/{{id}}/team" method="POST">
            {{#each team }}
              <div>
                <span><a href="{{ id }}">{{ name }} {{ lastName }} - {{ course }} </a></span>
                <input id="delete{{ id }}" name="{{ id }}" type="radio" value="delete" multiple>
                <label for="delete{{ id }}">Delete</label>
              </div>
            {{/each}}
            <button type="submit" class="btn btn-outline-dark btn-sm">Delete</button>
          </form>
          {{/if}}
{{!-- add team --}}

          {{#if applicants}}
          <h5 class="mt-3 mb-3"><strong>Applicants:</strong></h5>
          <form action="/projects/{{id}}/applicants" method="POST">
            {{#each applicants }}
              <div>
                <span><a href="{{ id }}">{{ name }} {{ lastName }} - {{ course }}</a></span>
                <input id="approve{{ id }}" name="{{ id }}" type="radio" value="approve" >
                <label for="approve{{ id }}">Approve</label>
                <input id="reject{{ id }}" name="{{ id }}" type="radio" value="reject" >
                <label for="reject{{ id }}">Reject</label>
              </div>
            {{/each}}
            <button type="submit" class="btn btn-outline-dark btn-sm">Submit</button>
          </form>
          {{/if}}
{{/if}}
            {{!-- <ul>
              {{#each applicants }}
                <div class="row">
                  <div class="col-sm-3"><a href="/profile/{{ id }}">{{ name }} {{ lastName }}</a></div>
                  <div class="col-sm-2"><button type="" class="btn btn-outline-success btn-sm">Approve</button></div>
                  <div class="col-sm-2"><button type="" class="btn btn-outline-danger btn-sm">Reject</button></div>
                </div>
              {{/each}}
            </ul> --}}

      {{!-- {{#if message }}
        <p style="color: red;">You have already applied for this project</p>
      {{/if}} --}}
       
      </div>
    {{!-- </div> --}}
    <!-- End content -->
 
</div>
<!-- End wrapper -->
{{/with}}

{{!-- </div> --}}

