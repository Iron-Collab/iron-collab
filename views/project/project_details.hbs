<!-- Wrapper -->
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar">
      {{!-- <div class="sidebar-header"><h3>Sidebar</h3></div> --}}
      
      <ul class="list-unstyled components mt-5">
        <li class="mt-3">
          <a href="/projects/{{ id }}/apply"> <button type="button" class="btn btn-outline-dark">Apply</button></a>
        </li>
        <li class="mt-3">
          <a href="/projects/new"> <button type="button" class="btn btn-outline-dark">Add Project</button></a>
        </li>
        <li class="mt-3">
          <a href="/projects/{{ id }}/edit"> <button type="button" class="btn btn-outline-dark">Edit Project</button></a>
        </li>
        <li class="mt-3">
          <a href="/projects/{{ id }}/delete"> <button type="button" class="btn btn-outline-dark">Delete Project</button></a>
        </li>
        <li class="mt-3">
          <a href="/projects/{{ id }}/delete"> <button type="button" class="btn btn-outline-dark">Manage a Project</button></a>
        </li>
      </ul>
    </nav>
    <!-- End sidebar -->
 
    <!-- Content -->
    {{!-- <div class="content"> --}}
      <div class=".container p-4 bg-rgb(115, 134, 213) rounded">
        <h1>Project Details</h1><br>
        
        {{#with project }}
          <h5><strong>Title: </strong>  {{ title }} </h5>
          <h5><strong>Description: </strong> {{ description }} </h5>
          <h5><strong>Location: </strong> {{ location }} </h5>
          <h5><strong>Looking for: </strong></h5>
            <ul>
              {{#if lookingFor.webdev}}
              <li><h6>Web Developers: {{lookingFor.webdev}} </h6></li>
              {{/if}}
              {{#if lookingFor.uxui}}
              <li><h6>UX/UI Designers: {{lookingFor.uxui}} </h6></li>
              {{/if}}
              {{#if lookingFor.data}}
              <li><h6>Data Analysts: {{lookingFor.data}} </h6></li>
              {{/if}}
            </ul>
          <h5><strong>Owner:</strong> <a href="/profile/{{ owner.0.id }}">{{ owner.0.name }} {{ owner.0.lastName }}</a></h5>
          <h5><strong>Deadline:</strong> {{ deadline }} </h5>
          <h5><strong>Status:</strong> {{ status }} </h5>
          <h5><strong>Applicants:</strong></h5>
            <ul>
              {{#each applicants }}
              <li><a href="/profile/{{ id }}">{{ name }} {{ lastName }}</a></li>
              {{/each}}
            </ul>
      
        {{/with}}
      </div>
    {{!-- </div> --}}
    <!-- End content -->
 
</div>
<!-- End wrapper -->




